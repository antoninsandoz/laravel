<?php $__env->startSection('scripts'); ?>

    <script>
        //like function
        $('#like').click(function() {
            
            var textLike = $( "#like" ).text();
               
            if(textLike == 'I like'){   
                $.get( "../like/1", function( data ) {
                    
                    var num = $( "#like_num" ).text();
                    num = parseInt(num);
                    num = num+1;
                    $( "#like_num" ).text(num);
                    $( "#like" ).text("I don't like");

                });
            }
            else{
                $.get( "../dontlike/1", function( data ) {
                    
                    var num = $( "#like_num" ).text();
                    num = parseInt(num);
                    num = num-1;
                    $( "#like_num" ).text(num);
                    $( "#like" ).text("I like");

                });
            }
            
        });
            
        //comment function
        $('#comment_submit').click(function() {          
            alert('salut');
            
            $.post('comment/new/<?php echo $picture->id; ?>', 'test=true' ,callback, 'text');
            
            function callback(test){
                console.log('Success!'+test);
            }
            
            

        });

        
    </script>

<?php $__env->stopSection(); ?> <!-- /script-->

